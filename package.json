{
  "name": "heisse-preise-de",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "prepare": "husky install",
    "format": "npx prettier --write .",
    "clean": "rimraf site/build && rimraf server/build",
    "build:css": "npx tailwindcss -i site/styles.css -o site/styles-bundle.css",
    "build:css-txt": "npx tailwindcss -i site/styles.css -o site/styles-bundle.css.txt",
    "build:site": "node ./esbuild.site.mjs",
    "build:server": "node ./esbuild.server.mjs",
    "dev": "concurrently \"npm run build:server && npm run server\" \"npx live-server site --cors --watch ./site --no-browser\" \"npm run build:site -- --watch\" \"npm run build:css -- --watch\" \"npm run build:css-txt -- --watch\"",
    "build": "npm run clean && npm run build:css && npm run build:css-txt && npm run build:site && npm run build:server",
    "server": "node --max_old_space_size=8192 --trace-warnings server/build/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yobst/heisse-preise-de.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yobst/heisse-preise-de/issues"
  },
  "homepage": "https://github.com/yobst/heisse-preise-de#readme",
  "dependencies": {
    "alasql": "^4.0.4",
    "axios": "^1.4.0",
    "chart.js": "^4.3.0",
    "chartjs-adapter-moment": "^1.0.1",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "lit": "^2.8.0",
    "lit-html": "^2.8.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/express": "^4.17.18",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.1.0",
    "esbuild": "^0.17.19",
    "live-server": "^1.2.2",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.2"
  }
}
